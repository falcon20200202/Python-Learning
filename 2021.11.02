sandwich_orders = ['sandwich1', 'sandwich2', 'sandwich3']
finished_sandwichs = []
while sandwich_orders:
    sandwich = sandwich_orders.pop()
    print(f"I made your {sandwich} sandwich.")
    finished_sandwichs.append(sandwich)
print(finished_sandwichs)

