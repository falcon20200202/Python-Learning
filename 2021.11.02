# case7-5
prompt = "\nPlease enter your age:"
prompt += "\n(Enter '0' when you are finished.)"
while True:
    age = input(prompt)
    age = int(age)
    if age == 0:
        break
    elif age < 3:
        price = 0
    elif (age >= 3) and (age <= 12):
        price = 10
    elif age > 12:
        price = 15
    print(f"The price is {price}.")

# case7-6
prompt = "\nPlease enter your age:"
prompt += "\n(Enter 'quit' when you are finished.)"
active = True
while active:
    age = input(prompt)
    if age == 'quit':
        active = False
    else:
        age = int(age)
        if age <= 0:
            print("Please enter a right age:")
            continue
        elif age < 3:
            price = 0
        elif (age >= 3) and (age <= 12):
            price = 10
        elif age > 12:
            price = 15
        print(f"The price is {price}.")

